<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".NameTag">

    <ImageView
        android:id="@+id/InstagramName"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/instaname" />

    <TextView
        android:id="@+id/bar1"
        android:layout_width="150dp"
        android:layout_height="4dp"
        android:layout_below="@id/InstagramName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorDarkGrey" />

    <TextView
        android:id="@+id/bar2"
        android:layout_width="150dp"
        android:layout_height="4dp"
        android:layout_below="@id/InstagramName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorDarkGrey" />

    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/InstagramName"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Name Tag"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_arrow" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Lottie"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="share-on-instagram.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/NameTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Lottie"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cookie"
        android:text="Name Tag Here"
        android:textColor="@color/colorWhite"
        android:textSize="45sp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Lottie2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/NameTag"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_fileName="share-on-instagram.json"
        app:lottie_loop="true" />

</RelativeLayout>